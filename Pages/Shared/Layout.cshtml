<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/fontawesome/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <!-- Bulma Version 0.9.0-->
    <link rel="stylesheet" href="~/css/bulma.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>

<nav class="navbar mt-2" role="navigation" aria-label="main navigation">
    <div class="container">
    <div class="navbar-brand">
        <a class="navbar-item" href="https://khalidabuhakmeh.com">
            <img alt="abuhakmeh logo" src="https://res.cloudinary.com/abuhakmeh/image/fetch/c_limit,f_auto,q_auto,w_300/https://khalidabuhakmeh.com/assets/images/posts/logos/gradient-logo.png" width="112" height="28">
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>
    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            <a asp-page="Index" class="navbar-item">
                Table
            </a>

            <a asp-page="Entry" class="navbar-item">
                Form
            </a>

            <a asp-page="Stonks" class="navbar-item">
                <span class="icon">
                    <i class="fa fa-chart-line"></i>
                </span>
                <span>Stonks</span>
            </a>

            <a asp-page="Chat" class="navbar-item">
                WS Chat
            </a>
        </div>

        <div class="navbar-end"></div>
    </div>
    </div>
</nav>
<section class="container mt-5">
    @RenderBody()
</section>
<script src="~/js/htmx.min.js" type="text/javascript"></script>
<script src="~/js/site.js" type="text/javascript"></script>
</body>
</html>